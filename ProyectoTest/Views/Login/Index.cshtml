
@{
    Layout = null;
}

<!DOCTYPE html>


<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
<link rel="stylesheet" href="estilos.css">

</head>
<body class="bg-dark">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="cuadro-baner">
                     Compra  Y  vende  los mejores  Productos
                </div>

                <div class="container">
                    
                    <!--****** Carrusel******* -->
                    <div class="slider">
                        <ul>
                            <li>
                                <img src="~/Imagenes/Carrusel/car02.jpg">
                            </li>
                            <li>
                                <img src="~/Imagenes/Carrusel/car03.jpg">
                            </li>
                            <li>
                                <img src="~/Imagenes/Carrusel/car04.jpg">
                            </li>
                            <li>
                                <img src="~/Imagenes/Carrusel/car05.jpg">
                            </li>
                        </ul>
                    </div>

                    <!--****** Carrusel******* -->

                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4"></h3></div>
                                <div class="card-body">
                                    <form action="@Url.Content("~/Login/Index")" method="post">
                                        @Html.AntiForgeryToken()
                                        <div class="form-floating mb-3">
                                            <input class="form-control" id="inputEmail" name="NCorreo" type="email" placeholder="" @*value=""*@ value="" />
                                            <label for="inputEmail">Correo</label>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input class="form-control" id="inputPassword" name="NContrasena" type="password" placeholder="Contraseña" @*value=""*@ autocomplete="off" value="" />
                                            <label for="inputPassword">Contraseña</label>
                                        </div>
                                        <div class="form-floating mb-3">
                                            @{if (ViewBag.Error != null)
                                                {
                                                    <div class="alert alert-danger" role="alert">
                                                        @ViewBag.Error
                                                    </div>
                                                }
                                            }
                                        </div>
                                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                            <button class="btn btn-primary btn-block" type="submit">Ingresar</button>
                                        </div>
                                        <div class="row mt-2">
                                            <div class="col-sm-12 text-center">
                                                <p class="mb-0">Necesitas una cuenta?</p>
                                            </div>
                                        </div>
                                    </form>

                                </div>

                                <div class="card-footer text-center py-3">
                                    <div class="small"><a id="publicidad_cuenta" href="@Url.Action("Registrarse","Login")"> Regístrate</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>



            </main>
        </div>

    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script>

    </script>
</body>
</html>
